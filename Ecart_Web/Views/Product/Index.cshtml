@model IEnumerable<Ecart_Web.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid p-3">
    <div class="row pt-4  justify-content-between">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Product
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Brand
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%" height="15%"><img src="@WC.ImagePath@obj.Image" width="100%" class="rounded" /></td>
                        <td >
                            <strong class="ellipsis">@obj.Name</strong>
                            <br/>

                            <p class="ellipsis">@obj.ShortDesc</p>

                        </td>
                        <td width="10%"><strong>@obj.Price</strong></td>
                        <td width="10%">@obj.Category.Name</td>
                        <td width="10%">@obj.ApplicationType.Name</td>
                        <td class="text-center" width="5%">
                            <div class="btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exists.</p>
    }

</div>

